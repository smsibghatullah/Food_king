<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_sync_products" model="ir.actions.server">
            <field name="name">Sync Products</field>
            <field name="model_id" ref="model_food_king_food_king"/>
            <field name="state">code</field>
            <field name="code">food_king.sync_all_products()</field>
        </record>

    <record id="view_food_king_box" model="ir.ui.view">
    <field name="name">food.king.box</field>
    <field name="model">food_king.food_king</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="get_token" string="Generate Token" type="object" class="btn-primary"/>
            </header>
            <sheet>
                <group>
                    <field name="url"/>
                    <field name="username"/>
                    <field name="password" password="True"/>
                    <label for="get_product_from_api" string="Sync Products"/>
                    <button name="get_product_from_api" string="Sync Products" type="object" class="oe_highlight"/>
                    <label for="get_categories_from_api" string="Sync Categories"/>
                    <button name="get_categories_from_api" string="Sync Categories" type="object" class="oe_highlight"/>
                    <label for="get_customer_from_api" string="Sync Customer"/>
                    <button name="get_customer_from_api" string="Sync Customers" type="object" class="oe_highlight"/>
                    <label for="get_tax_from_api" string="Sync Tax"/>
                    <button name="get_tax_from_api" string="Sync Taxes" type="object" class="oe_highlight"/>
                    <label for="get_pos_order_from_api" string="Sync POS Orders"/>
                    <button name="get_pos_order_from_api" string="Sync POS Orders" type="object" class="oe_highlight"/>
                </group>
            </sheet>
        </form>
    </field>
</record>


        <record id="action_food_king" model="ir.actions.act_window">
            <field name="name">Food King</field>
            <field name="res_model">food_king.food_king</field>
            <field name="view_mode">form</field>
            <field name="res_model">food_king.food_king</field>
            <field name="target">current</field>
            <field name="res_id">1</field>
            <field name="context">{'create': False}</field>
        </record>

         <record id="action_food_king34" model="ir.actions.act_window">
            <field name="name">Food King</field>
            <field name="res_model">food_king.food_king</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_food_king_box"/>
        </record>

        <menuitem id="menu_food_king12" name="Food King" action="action_food_king" sequence="450"/>
        <menuitem id="menu_food_king_settings" name="Food King Settings"  action="action_food_king34" sequence="30"/>

     <record id="view_food_king_token_wizard_form" model="ir.ui.view">
        <field name="name">food_king.token.wizard.form</field>
        <field name="model">food_king.token.wizard</field>
        <field name="arch" type="xml">
            <form string="Your Wizard Title" create="false">
                <group>
                    <field name="message"/>
                </group>
                <footer>
                    <button name="action_close_wizard" string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
     </record>
    </data>
</odoo>

       