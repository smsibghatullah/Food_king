<odoo>
    <data>
        <record id="view_product_form_inherited_food_king" model="ir.ui.view">
            <field name="name">product.template.form.inherited.food.king</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="item_type"/>
                    <field name="is_featured"/>
                    <field name="food_king_active"/>
                    <field name="caution"/>
                    <field name="description"/>
                </xpath>
                <!-- <xpath expr="//field[@name='pos_config_ids']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath> -->
            </field>
        </record>

          <record id="pos_order_tree_inherit" model="ir.ui.view">
            <field name="name">pos.order.tree.inherit</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                  <field  name="status" widget="badge"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
